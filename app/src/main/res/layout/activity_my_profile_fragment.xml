<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.MyProfile_fragment">
    <LinearLayout
        android:id="@+id/lr_profile_allview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:textSize="25dp"
                android:text="더보기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_profile_chain"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/chain"/>
            <ImageView
                android:id="@+id/iv_profile_boxe"
                android:layout_toLeftOf="@+id/iv_profile_chain"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/boxe"/>
            <ImageView
                android:id="@+id/iv_profile_searching"
                android:layout_toLeftOf="@+id/iv_profile_boxe"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/searching"/>
        </RelativeLayout>
        <ScrollView
            android:layout_weight="7.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_main_mypicture"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/defaultprofile"
                        android:layout_marginLeft="8dp"
                        android:scaleType="centerCrop"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="2dp" />
                    <TextView
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:id="@+id/tv_main_myname"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/iv_main_mypicture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tv_main_myemail"
                        android:layout_toRightOf="@+id/iv_main_mypicture"
                        android:layout_below="@id/tv_main_myname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <ImageView
                        android:id="@+id/iv_main_mypage"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mybutto"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/round"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:layout_marginLeft="70dp"
                        android:id="@+id/tv_main_pay"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="pay" />
                    <TextView
                        android:layout_marginLeft="100dp"
                        android:textColor="#000000"
                        android:id="@+id/tv_main_money"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                       android:layout_alignParentLeft="true"
                        android:text="3,751원" />
                    <TextView
                        android:layout_marginRight="100dp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                         android:layout_alignParentRight="true"
                        android:text="송금" />
                    <TextView
                        android:id="@+id/tv_myprofile_pay"
                        android:layout_marginRight="30dp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                     android:layout_alignParentRight="true"
                        android:text="결제" />
                </RelativeLayout>

                <TableLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="240dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/gift"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/game"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/makers"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/emoji"/>

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_myprofile_friendshop"
                            android:layout_weight="1"
                            android:src="@drawable/friendshop"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/shopping"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/style"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/order"/>

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/melonticket"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/page"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/melon"/>
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/allservice"/>

                    </TableRow>
                </TableLayout>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/starbucks" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lr_profile_detail_mypge_allview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/iv_mypage_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>
            <TextView
                android:id="@+id/tv_mypage_my"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="32dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_mypage_my"
                android:id="@+id/iv_mypage_mypicture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/defaultprofile"/>
            <TextView
                android:id="@+id/tv_mypage_name"
                android:text=""
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_mypage_mypicture"/>
            <TextView
                android:id="@+id/tv_mypage_email"
                android:text=""
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_mypage_name"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/message2"
                android:layout_marginRight="16dp"
                android:layout_marginTop="60dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/round"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="주문내역"/>
            <TextView
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="받은선물"/>
            <TextView
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="청구서"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/car"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="주문배송"/>
            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/movie" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="티켓"
                android:textColor="#000000"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/plus" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/tikcet"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="교환권"/>
            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/box"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="관심상품"/>
            <ImageView

                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_myprofile_banFriend"
                android:layout_gravity="center_vertical"
                android:textColor="#F44336"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="차단친구 목록"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_myprofile_secession"
            android:textColor="#000000"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="회원탈퇴"/>
        <TextView
            android:id="@+id/tv_myprofile_logout"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="로그아웃"/>
    </LinearLayout>
</LinearLayout>