<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
    android:id="@+id/rl_message"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/rv_item_image"
            android:layout_alignParentLeft="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/defaultprofile2"/>
        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/rv_item_image"
            android:id="@+id/rv_item_content"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=""/>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/rv_item_image"
        android:layout_below="@+id/rv_item_content"
        android:id="@+id/rv_item_content_word"
        android:layout_gravity="center_vertical"
        android:textColor="#555252"
        android:gravity="center_vertical"
        android:textSize="13dp"
        android:layout_marginLeft="12dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text=""/>
 <TextView
     android:layout_marginTop="20dp"
     android:layout_marginRight="8dp"
     android:id="@+id/rv_item_time"
     android:layout_alignParentRight="true"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text=""/>
    </RelativeLayout>
