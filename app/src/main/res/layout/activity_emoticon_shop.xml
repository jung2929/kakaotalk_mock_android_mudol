<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".EmoticonShopActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="이모티콘"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="30dp"
    android:textStyle="bold"
    android:textSize="30dp"/>
    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ECECEC"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
<LinearLayout
    android:background="#FFFDFD"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/tv_emoticonshop_new"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="신규"/>
    <TextView
        android:id="@+id/tv_emoticonshop_popular"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="인기"/>
    <TextView
        android:id="@+id/tv_emoticonshop_style"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="스타일"/>
    <TextView
        android:id="@+id/tv_emoticonshop_searvh"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="검색"/>
</LinearLayout>

<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_emoticonshop"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</android.support.v7.widget.RecyclerView>

</LinearLayout>

</LinearLayout>