<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#08646460"
    tools:context=".Fragment.GameTranslateFragment">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:textSize="25dp"
            android:text="게임별"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_game_chain"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/chain"/>
        <ImageView
            android:id="@+id/iv_game_searching"
            android:layout_toLeftOf="@+id/iv_game_chain"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/searching"/>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_game_translate"
      android:background="#ffffff"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/kakaotranslate"/>
     <RelativeLayout
         android:background="#ffffff"
         android:layout_width="match_parent"
         android:layout_height="300dp"
         >
         <TextView
             android:layout_marginTop="4dp"
             android:layout_marginBottom="4dp"
             android:layout_marginLeft="8dp"
             android:id="@+id/tv_game_snacktime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="게임별 스낵타임"/>

         <TableLayout
             android:layout_below="@+id/tv_game_snacktime"
             android:layout_marginTop="8dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/game2"/>
                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/game3"/>
                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/game4"/>
                 <ImageView
                     android:layout_weight="1"
                     android:src="@drawable/game1"/>

         </TableRow>
             <TableRow
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <ImageView
                 android:layout_weight="1"
                 android:src="@drawable/game5"/>
             <ImageView
                 android:layout_weight="1"
                 android:src="@drawable/game6"/>
             <ImageView
                 android:layout_weight="1"
                 android:src="@drawable/game7"/>
             <ImageView
                 android:layout_weight="1"
                 android:src="@drawable/game8"/>
         </TableRow>

         </TableLayout>
     </RelativeLayout>
    </LinearLayout>


 </ScrollView>
</LinearLayout>